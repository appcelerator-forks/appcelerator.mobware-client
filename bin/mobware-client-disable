#!/usr/bin/env node

var program = require('commander'),
	mwclient = require('..'),
	path = require('path'),
	utils = require('../lib/utils');

program
	.usage('[options]')
	.description('disable Appcelerator Mobware for a project')
	.option('-t, --tiapp <tiapp>', 'Path to tiapp.xml', path.join(process.cwd(), 'tiapp.xml'));

program.on('--help', function() {
	console.log('  To disable Mobware in a project:');
	console.log('');
	console.log('    $ mobware-client disable --tiapp /path/to/tiapp.xml');
	console.log('');
});

program.parse(process.argv);

mwclient.disable(program, function(err) {
	if (err) {
		utils.die(err.toString());
	}
});
